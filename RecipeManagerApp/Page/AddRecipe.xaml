<Page
    x:Class="RecipeManagerApp.Page.AddRecipe"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:RecipeManagerApp.Page"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="12*"/>
        </Grid.RowDefinitions>
        <Grid Background="Black" Grid.Row="0">

            <!--Add the top most Menu bar-->
            <StackPanel Orientation="Horizontal">

                <CommandBar DefaultLabelPosition="Right" Background="Black">
                    <AppBarButton x:Name="fileBtn" Icon="OpenFile" Label="File" HorizontalAlignment="Center" Foreground="SteelBlue">
                        <Button.Flyout>
                            <MenuFlyout>
                                <MenuFlyoutItem Text="Action 1" Width="140" Height="50"/>
                                <MenuFlyoutItem Text="Action 2" Width="140" Height="50"/>
                                <MenuFlyoutItem Text="Action 3" Width="140" Height="50"/>
                            </MenuFlyout>
                        </Button.Flyout>
                    </AppBarButton>
                    <AppBarSeparator Foreground="SteelBlue"/>
                    <AppBarButton x:Name="settingsBtn" Icon="Setting" Label="settings" HorizontalAlignment="Center" Foreground="SteelBlue"/>
                    <AppBarSeparator Foreground="SteelBlue"/>
                    <AppBarButton x:Name="exitBtn" Icon="Cancel" Label="Exit" HorizontalAlignment="Center" Foreground="SteelBlue" />
                </CommandBar>
            </StackPanel>
        </Grid>

        <!--Second row of the GUI-->
        <!--define some dimesions for the grid-->
        <Grid  Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="4*"/>
            </Grid.RowDefinitions>

            <!--Logo grid-->
            <Grid Grid.Row="0" Grid.Column="0" Background="LightGray" >
                <StackPanel>
                    <Image Width="300" Source="ms-appx:///../Assets/food.png"/>


                </StackPanel>

            </Grid>

            <!-- Welcome grid -->


            <Grid Grid.Row="0" Grid.Column="1" Background="LightGray" >
                <TextBlock Text="Add Recipe" 
               Style="{StaticResource HeaderTextBlockStyle}"
               IsTextSelectionEnabled="True" 
               Foreground="SteelBlue" 
               FontSize="80"
               TextAlignment="Center"
               FontFamily="Segoe UI" 
               FontStyle="Normal"/>

            </Grid>

            <!--Vertical Buttons grid-->
            <Grid Grid.Row="1" Grid.Column="0" Background="LightGray">
                <StackPanel Orientation="Vertical" >
                    <!--Recipes Button-->
                    <Button x:Name="recipesBtn" HorizontalAlignment="Stretch" Height="80" Margin="0 5 0 5" Background="SteelBlue" Click="recipesBtn_Click">
                        <StackPanel Orientation="Horizontal">
                            <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xEADF;" FontSize="25" Margin="0 0 10 0" Foreground="White"/>
                            <TextBlock  Text="Recipes"
                               Foreground="White" 
                               FontSize="20"
                               TextAlignment="Right"
                               FontFamily="Segoe UI" 
                               FontStyle="Normal"
                                 />
                        </StackPanel>

                    </Button>

                    <!--Shopping Button-->
                    <Button x:Name="shoppingListBtn" HorizontalAlignment="Stretch" Height="80" Margin="0 0 0 5" Background="SteelBlue" Click="shoppingListBtn_Click">
                        <StackPanel Orientation="Horizontal">
                            <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE7BF;" FontSize="25" Margin="0 0 10 0" Foreground="White"/>
                            <TextBlock  Text="Shopping List"
                               Foreground="white" 
                               FontSize="20"
                               TextAlignment="Right"
                               FontFamily="Segoe UI" 
                               FontStyle="Normal"
                                 />
                        </StackPanel>

                    </Button>

                    <!--Options Button-->
                    <Button x:Name="optionsBtn" HorizontalAlignment="Stretch" Height="80" Margin="0 0 0 5" Background="SteelBlue">
                        <StackPanel Orientation="Horizontal">
                            <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE8F1;" FontSize="25" Margin="0 0 10 0" Foreground="White"/>
                            <TextBlock  Text="Options"
                               Foreground="White" 
                               FontSize="20"
                               TextAlignment="Right"
                               FontFamily="Segoe UI" 
                               FontStyle="Normal"
                                 />
                        </StackPanel>

                    </Button>
                </StackPanel>

                <!--Centre big grid-->
            </Grid>
            <Grid Grid.Row="1" Grid.Column="1" Background="LightGray" BorderBrush="SteelBlue" BorderThickness="1">

                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

                    <Button x:Name="btn_addPhoto" Height="100" Width="100" Background="SteelBlue" Content="Add photo" Margin="0,24" Foreground="White" Click="btn_addPhoto_Click" />
                    <TextBox x:Name="textBox_name" Header= "Name" Margin="0,24,0,0" MaxLength="32" Width="400" HorizontalAlignment="Left" InputScope="PersonalFullName"/>
                    <TextBox x:Name="textBox_description" Header="Description" Margin="0,24,0,0" Width="400" Height="150" HorizontalAlignment="Left" TextWrapping="NoWrap" InputScope="PersonalFullName" />


                    <StackPanel Orientation="Horizontal">

                        <Button x:Name="saveRecipeBtn" Content="Save" Foreground="White" Background="SteelBlue" MinWidth="100" MinHeight="50" Click="saveRecipeBtn_Click"  />
                        <Button x:Name="cancelRecipeBtn" Content="Cancel" Foreground="White" Background="Red" MinWidth="100" MinHeight="50" Margin="24" Click="cancelRecipeBtn_Click"  />

                    </StackPanel>
                </StackPanel>

                <ListBox x:Name="listBox_Ingredients" HorizontalAlignment="Left" Width="400" Height="400" Margin="1012,342,0,0" VerticalAlignment="Top"/>
                <ComboBox x:Name="comboBox_Unit" HorizontalAlignment="Left" Margin="1011,207,0,0" VerticalAlignment="Top" Height="40" Width="372"/>
                <TextBox x:Name="textBox_ingredientName" HorizontalAlignment="Left" Margin="1013,115,0,0" Text="Name" VerticalAlignment="Top" Width="371"/>
                <TextBox x:Name="textBox_amount" HorizontalAlignment="Left" Margin="1013,154,0,0" Text="Amount" VerticalAlignment="Top" Width="371"/>
                <Button x:Name="btn_AddIngredient" Content="Add" HorizontalAlignment="Left" Margin="1014,282,0,0" VerticalAlignment="Top" Click="btn_AddIngredient_Click"/>
                <Button x:Name="btn_DeleteIngredient" Content="Delete" HorizontalAlignment="Left" Margin="1085,283,0,0" VerticalAlignment="Top" Click="btn_DeleteIngredient_Click"/>

            </Grid>
        </Grid>
    </Grid>


</Page>
